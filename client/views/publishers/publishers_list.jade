h1 Publishers

.row
  .small-8.columns
    h3 Publishers List
    table#publishers
      thead
        tr
          th Delete
          th Name
          th Address
          th Phone
      tbody
        tr(ng-repeat='publisher in publishers')
          td
            a(ng-click='nuke(publisher)')
              img(ng-src='/assets/delete.png')
          td: a(ui-sref='publishers.detail({publisherId:publisher.publisher_id})') {{publisher.name}}
          td {{publisher.address}}
          td {{publisher.phone}}         
    .pagination-centered
      ul.pagination
        li(ng-class='{current:isCurrent(page)}', ng-repeat='page in _.range(0,pages)')
          a(ui-sref='publishers.list({page:page})') {{page}}
  .small-4.columns
    h3 Add A Publisher
    input(type='text', ng-model='pub.name', placeholder='EMI')
    input(type='text', ng-model='pub.address', placeholder='123 Main St., Nashville, TN, 37212')
    input(type='text', ng-model='pub.phone', placeholder='123-456-7890')
    button.small.radius.success(ng-click='create(pub)') Add Publisher
