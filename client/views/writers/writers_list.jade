.panel.writers.show-for-medium-up
  .row
    .small-12.columns
      h2.add Add A Writer
      h6.sub Add publisher information before adding writer
  .row
    .small-6.columns
      label.labels Writer Name
      input(type='text', ng-model='person.name', placeholder='name')
    .small-6.columns
      label.labels Writer's Publisher
      select(name='pubId', ng-model='person.pub', ng-options='p.publisher_id as p.name for p in publishers | orderBy:"name"', required)
       option(value='') Select Publisher
  .row
    .small-6.columns
      label.labels Writer's Phone #
      input(type='text', ng-model='person.phone', placeholder='123-456-7890')
    .small-6.columns
      label.labels Writer's PRO
      input(type='text', ng-model='person.pro', placeholder='BMI')
  .row  
    .small-12.columns
      button.button.expand.info(ng-click='create(person)') Add Writer

