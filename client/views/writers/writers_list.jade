.row.writers.show-for-medium-up
  .small-12.columns
    h3.labels Writers List
    table#writers
      thead
        tr
          th Name
          th Publishing
          th Phone
          th PRO
      tbody
        tr(ng-repeat='writer in writers')
          td: a(ui-sref='writers.detail({writerId:writer.writer_id})') {{writer.name}}
          td {{writer.pubName}}
          td {{writer.phone}}
          td {{writer.pro}}         
    .pagination-centered
      ul.pagination
        li(ng-class='{current:isCurrent(page)}', ng-repeat='page in _.range(0,pages)')
          a(ui-sref='writers.list({page:page})') {{page}}

