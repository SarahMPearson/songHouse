h1 {{mode | uppercase}}

.row
  .small-12.columns
    form
      .row
        .small-6.large-centered.columns
          label(for='username') Username
          input#username(type='text', name='username', ng-model='user.username', autofocus)
        .small-6.columns
      .row
        .small-6.large-centered.columns
          label(for='password') Password
          input#password(type='password', name='password', ng-model='user.password')
        .small-6.columns
      //- .row(ng-show='mode === "register"')
      //-   .small-6.large-centered.columns
      //-     label(for='companyID') Company ID
      //-     input#avatar(type='text', name='companyID', ng-model='user.companyID')
      //-   .small-6.columns
      .row(ng-show='mode === "register"')
        .small-6.large-centered.columns
          label(for='avatar') Company Logo
          input#avatar(type='text', name='avatar', ng-model='user.avatar')
        .small-6.columns
      .row
        .small-6.large-centered.columns
          button(ng-click='submit()') Submit
        .small-6.columns
